<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_vehicle_inspection_tree" model="ir.ui.view">
            <field name="name">vehicle.inspection.list</field>
            <field name="model">vehicle.inspection</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Vehicle Inspections">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="inspection_date"/>
                    <field name="inspector_id"/>
                    <field name="next_inspection_date"/>
                    <field name="odometer"/>
                    <field name="state" decoration-info="state == 'draft'" 
                           decoration-warning="state == 'in_progress'"
                           decoration-success="state == 'passed'"
                           decoration-danger="state in ('failed', 'maintenance')"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_vehicle_inspection_form" model="ir.ui.view">
            <field name="name">vehicle.inspection.form</field>
            <field name="model">vehicle.inspection</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Vehicle Inspection">
                    <header>
                        <button name="action_start_inspection" 
                                string="Start Inspection" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state not in ('draft',)"/>
                        <button name="action_mark_passed" 
                                string="Mark as Passed" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state not in ('in_progress',)"/>
                        <button name="action_mark_failed" 
                                string="Mark as Failed" 
                                type="object"
                                invisible="state not in ('in_progress',)"/>
                        <button name="action_needs_maintenance" 
                                string="Needs Maintenance" 
                                type="object"
                                invisible="state not in ('in_progress',)"/>
                        <button name="action_schedule_maintenance" 
                                string="Schedule Maintenance" 
                                type="object"
                                invisible="state not in ('maintenance',)"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,passed,failed,maintenance"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_id"/>
                                <field name="license_plate"/>
                                <field name="vin_sn"/>
                                <field name="model_id"/>
                                <field name="inspection_date"/>
                                <field name="inspector_id"/>
                            </group>
                            <group>
                                <field name="odometer"/>
                                <field name="next_inspection_date"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Exterior Inspection">
                                <group>
                                    <group>
                                        <field name="body_condition"/>
                                        <field name="windshield_condition"/>
                                        <field name="tire_condition"/>
                                        <field name="light_signals"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Interior Inspection">
                                <group>
                                    <group>
                                        <field name="seat_belts"/>
                                        <field name="mirrors"/>
                                        <field name="dashboard_lights"/>
                                        <field name="horn"/>
                                        <field name="ac_heating"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Mechanical Inspection">
                                <group>
                                    <group>
                                        <field name="engine_condition"/>
                                        <field name="brake_condition"/>
                                        <field name="transmission"/>
                                        <field name="steering"/>
                                        <field name="exhaust"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Safety Equipment">
                                <group>
                                    <group>
                                        <field name="first_aid_kit"/>
                                        <field name="fire_extinguisher"/>
                                        <field name="warning_triangle"/>
                                        <field name="spare_tire"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Maintenance Items">
                                <field name="maintenance_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="priority"/>
                                        <field name="scheduled_date"/>
                                        <field name="completion_date"/>
                                        <field name="cost"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes">
                                <group>
                                    <field name="notes" placeholder="Add inspection notes..." nolabel="1"/>
                                    <field name="recommendations" placeholder="Add recommendations..." nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_vehicle_inspection_search" model="ir.ui.view">
            <field name="name">vehicle.inspection.search</field>
            <field name="model">vehicle.inspection</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Vehicle Inspections">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="inspector_id"/>
                    <field name="license_plate"/>
                    <field name="vin_sn"/>
                    <filter string="My Inspections" name="my_inspections" domain="[('inspector_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Passed" name="passed" domain="[('state', '=', 'passed')]"/>
                    <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                    <filter string="Needs Maintenance" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                    <separator/>
                    <filter string="Due for Inspection" name="due_inspection" 
                            domain="[('next_inspection_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Vehicle" name="vehicle" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="Inspector" name="inspector" context="{'group_by': 'inspector_id'}"/>
                        <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                        <filter string="Inspection Date" name="inspection_date" context="{'group_by': 'inspection_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_vehicle_inspection" model="ir.actions.act_window">
            <field name="name">Vehicle Inspections</field>
            <field name="res_model">vehicle.inspection</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_vehicle_inspection_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first vehicle inspection
                </p>
                <p>
                    Track and manage vehicle safety inspections.
                </p>
            </field>
        </record>
    </data>
</odoo> 