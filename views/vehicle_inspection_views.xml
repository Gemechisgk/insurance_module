<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_vehicle_inspection_tree" model="ir.ui.view">
            <field name="name">vehicle.inspection.tree</field>
            <field name="model">vehicle.inspection</field>
            <field name="arch" type="xml">
                <list string="Vehicle Inspections">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="inspector_id"/>
                    <field name="inspection_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_vehicle_inspection_form" model="ir.ui.view">
            <field name="name">vehicle.inspection.form</field>
            <field name="model">vehicle.inspection</field>
            <field name="arch" type="xml">
                <form string="Vehicle Inspection">
                    <header>
                        <button name="action_draft" string="Set to Draft" type="object" class="oe_highlight" invisible="state not in ('in_progress', 'done', 'cancelled')"/>
                        <button name="action_in_progress" string="Start Inspection" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_done" string="Complete Inspection" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'in_progress')"/>
                        <button name="print_report" string="Print Report" type="object" class="oe_highlight" invisible="state != 'done'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_id" required="1"/>
                                <field name="inspector_id" required="1"/>
                                <field name="inspection_date" required="1"/>
                                <field name="mileage"/>
                                <field name="company_id" groups="base.group_multi_company" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Inside the Vehicle">
                                <group>
                                    <group string="Service Brake System">
                                        <field name="service_brake_status"/>
                                    </group>
                                    <group string="Parking Brake System">
                                        <field name="parking_brake_status"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Door Locks">
                                        <field name="door_front_left_status"/>
                                        <field name="door_front_right_status"/>
                                        <field name="door_rear_left_status"/>
                                        <field name="door_rear_right_status"/>
                                        <field name="door_hatch_status"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Seat Belts">
                                        <field name="seat_belt_front_left_status"/>
                                        <field name="seat_belt_front_right_status"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Center Rear View Mirror">
                                        <field name="rear_view_mirror_status"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Outside the Vehicle">
                                <group>
                                    <group string="Lighting System">
                                        <field name="headlight_r_high_status"/>
                                        <field name="headlight_r_low_status"/>
                                        <field name="headlight_l_high_status"/>
                                        <field name="headlight_l_low_status"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Side Mirrors">
                                        <field name="side_mirror_left_status"/>
                                        <field name="side_mirror_right_status"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Wind Shield">
                                        <field name="windshield_left_status"/>
                                        <field name="windshield_right_status"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Engine On Checks">
                                <group>
                                    <group string="Wiper">
                                        <field name="wiper_left_status"/>
                                        <field name="wiper_right_status"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Dashboard">
                                        <field name="warning_lamps_status"/>
                                        <field name="gauges_status"/>
                                        <field name="mileage_info_status"/>
                                        <field name="fire_extinguisher_status"/>
                                        <field name="first_aid_kit_status"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Results">
                                <group>
                                    <field name="findings"/>
                                    <field name="recommendations"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_vehicle_inspection_search" model="ir.ui.view">
            <field name="name">vehicle.inspection.search</field>
            <field name="model">vehicle.inspection</field>
            <field name="arch" type="xml">
                <search string="Vehicle Inspections">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="inspector_id"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                    <filter string="Done" name="done" domain="[('state','=','done')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Vehicle" name="group_by_vehicle" context="{'group_by':'vehicle_id'}"/>
                        <filter string="Inspector" name="group_by_inspector" context="{'group_by':'inspector_id'}"/>
                        <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_vehicle_inspection" model="ir.actions.act_window">
            <field name="name">Vehicle Inspections</field>
            <field name="res_model">vehicle.inspection</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first vehicle inspection!
                </p>
            </field>
        </record>

        <!-- Report Action -->
        <record id="action_report_vehicle_inspection" model="ir.actions.report">
            <field name="name">Vehicle Inspection Report</field>
            <field name="model">vehicle.inspection</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">insurance_module.report_vehicle_inspection</field>
            <field name="report_file">insurance_module.report_vehicle_inspection</field>
            <field name="print_report_name">'Vehicle Inspection Report - %s' % (object.name)</field>
            <field name="attachment">(object.state == 'done')</field>
            <field name="binding_model_id" ref="model_vehicle_inspection"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo> 