<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_incident_report_tree" model="ir.ui.view">
            <field name="name">incident.report.list</field>
            <field name="model">incident.report</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Incident Reports">
                    <field name="name"/>
                    <field name="incident_date"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="incident_type"/>
                    <field name="location"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_incident_report_form" model="ir.ui.view">
            <field name="name">incident.report.form</field>
            <field name="model">incident.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Incident Report">
                    <header>
                        <button name="action_report" 
                                string="Report" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'draft'"/>
                        <button name="action_start_investigation" 
                                string="Start Investigation" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'reported'"/>
                        <button name="action_mark_action_required" 
                                string="Mark Action Required" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'investigation'"/>
                        <button name="action_resolve" 
                                string="Resolve" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'action'"/>
                        <button name="action_close" 
                                string="Close" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'resolved'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,reported,investigation,action,resolved,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Personal/Employment Details">
                                <group>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="employee_id_number" readonly="1"/>
                                        <field name="address" readonly="1"/>
                                        <field name="postcode" readonly="1"/>
                                        <field name="date_of_birth" readonly="1"/>
                                        <field name="gender" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="occupation" readonly="1"/>
                                        <field name="time_in_job"/>
                                        <field name="department_id" readonly="1"/>
                                        <field name="supervisor_id" readonly="1"/>
                                        <field name="employment_status"/>
                                        <field name="employer_name" invisible="employment_status != 'contractual'"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Occurrence of the Incident">
                                <group>
                                    <group>
                                        <field name="incident_date"/>
                                        <field name="incident_time"/>
                                        <field name="report_date"/>
                                        <field name="work_activity"/>
                                        <field name="location"/>
                                    </group>
                                    <group>
                                        <field name="description"/>
                                        <field name="witnesses" widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Type of Injury" invisible="incident_type != 'injury'">
                                <group>
                                    <group string="Injury Types">
                                        <field name="injury_strain_sprain"/>
                                        <field name="injury_amputation"/>
                                        <field name="injury_animal_bite"/>
                                        <field name="injury_puncture"/>
                                        <field name="injury_laceration"/>
                                        <field name="injury_hearing"/>
                                        <field name="injury_hernia"/>
                                        <field name="injury_soft_tissue"/>
                                        <field name="injury_contusion"/>
                                        <field name="injury_foreign_body"/>
                                        <field name="injury_welding"/>
                                        <field name="injury_heat"/>
                                        <field name="injury_burn_heat"/>
                                        <field name="injury_burn_chemical"/>
                                        <field name="injury_burn_other"/>
                                        <field name="injury_dermatitis"/>
                                        <field name="injury_dental"/>
                                        <field name="injury_pain"/>
                                        <field name="injury_respiratory"/>
                                        <field name="injury_twist"/>
                                        <field name="injury_disease"/>
                                        <field name="injury_toxic"/>
                                        <field name="injury_whiplash"/>
                                        <field name="injury_swelling"/>
                                        <field name="injury_fracture"/>
                                        <field name="injury_internal"/>
                                        <field name="injury_crush"/>
                                        <field name="injury_other"/>
                                        <field name="injury_other_specify" invisible="not injury_other"/>
                                    </group>
                                    <group string="Body Part Injured">
                                        <field name="body_side"/>
                                        <field name="body_part_chest"/>
                                        <field name="body_part_abdomen"/>
                                        <field name="body_part_hip"/>
                                        <field name="body_part_genitals"/>
                                        <field name="body_part_groin"/>
                                        <field name="body_part_circulatory"/>
                                        <field name="body_part_arm_upper"/>
                                        <field name="body_part_arm_lower"/>
                                        <field name="body_part_elbow"/>
                                        <field name="body_part_wrist"/>
                                        <field name="body_part_hand"/>
                                        <field name="body_part_shoulder"/>
                                        <field name="body_part_head"/>
                                        <field name="body_part_scalp"/>
                                        <field name="body_part_nose"/>
                                        <field name="body_part_ears"/>
                                        <field name="body_part_eyes"/>
                                        <field name="body_part_neck"/>
                                        <field name="body_part_back_upper"/>
                                        <field name="body_part_back_middle"/>
                                        <field name="body_part_back_lower"/>
                                        <field name="body_part_leg_upper"/>
                                        <field name="body_part_leg_lower"/>
                                        <field name="body_part_knee"/>
                                        <field name="body_part_foot"/>
                                        <field name="body_part_ankle"/>
                                        <field name="body_part_finger"/>
                                        <field name="body_part_toe"/>
                                        <field name="body_part_other"/>
                                        <field name="body_part_other_specify" invisible="not body_part_other"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Property Damage" invisible="incident_type != 'property_damage'">
                                <group>
                                    <field name="property_damage_description"/>
                                </group>
                            </page>
                            
                            <page string="Treatment" invisible="incident_type != 'injury'">
                                <group>
                                    <group>
                                        <field name="treatment_required"/>
                                        <field name="first_aid_attendant"/>
                                        <field name="first_aid_treatment"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Work Status" invisible="incident_type != 'injury'">
                                <group>
                                    <group>
                                        <field name="work_status"/>
                                        <field name="miss_shift"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Additional Information">
                                <group>
                                    <group>
                                        <field name="incident_type"/>
                                        <field name="requires_investigation"/>
                                        <field name="insurance_claim_required"/>
                                        <field name="insurance_claim_id" invisible="not insurance_claim_required"/>
                                        <field name="police_report_required"/>
                                        <field name="police_report_number" invisible="not police_report_required"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_incident_report_search" model="ir.ui.view">
            <field name="name">incident.report.search</field>
            <field name="model">incident.report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Incident Reports">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="location"/>
                    <field name="department_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <filter string="My Reports" name="my_reports" domain="[('employee_id.user_id', '=', uid)]"/>
                    <filter string="Requires Investigation" name="investigation_required" domain="[('requires_investigation', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Department" name="department" context="{'group_by': 'department_id'}"/>
                        <filter string="Company" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                        <filter string="Incident Type" name="type" context="{'group_by': 'incident_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_incident_report" model="ir.actions.act_window">
            <field name="name">Incident Reports</field>
            <field name="res_model">incident.report</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_incident_report_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first incident report
                </p>
                <p>
                    Record and track workplace incidents.
                </p>
            </field>
        </record>
    </data>
</odoo> 