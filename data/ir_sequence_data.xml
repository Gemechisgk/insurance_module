<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Insurance Claims -->
        <record id="seq_insurance_claim" model="ir.sequence">
            <field name="name">Insurance Claim</field>
            <field name="code">insurance.claim</field>
            <field name="prefix">CLM/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Office Inspections -->
        <record id="seq_office_inspection" model="ir.sequence">
            <field name="name">Office Inspection</field>
            <field name="code">office.inspection</field>
            <field name="prefix">INSP/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Employee Suggestions -->
        <record id="seq_employee_suggestion" model="ir.sequence">
            <field name="name">Employee Safety Suggestion</field>
            <field name="code">employee.suggestion</field>
            <field name="prefix">SUG/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for Welding Machine Inspections -->
        <record id="seq_welding_machine_inspection" model="ir.sequence">
            <field name="name">Welding Machine Inspection</field>
            <field name="code">welding.machine.inspection</field>
            <field name="prefix">WELD/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo> 