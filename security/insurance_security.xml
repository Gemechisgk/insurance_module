<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Custom Category for Insurance Management -->
        <record id="module_category_insurance_management" model="ir.module.category">
            <field name="name">Insurance Management</field>
            <field name="sequence">30</field>
            <field name="description">Access to Safety &amp; Insurance features</field>
        </record>

        <!-- Security Groups -->
        <record id="group_insurance_user" model="res.groups">
            <field name="name">Insurance User</field>
            <field name="category_id" ref="insurance_module.module_category_insurance_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_insurance_manager" model="res.groups">
            <field name="name">Insurance Manager</field>
            <field name="category_id" ref="insurance_module.module_category_insurance_management"/>
            <field name="implied_ids" eval="[(4, ref('insurance_module.group_insurance_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo> 